<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.CityAdd">


    <TextView
        android:id="@+id/CityAddTitle"
        android:layout_width="293dp"
        android:layout_height="41dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="50dp"
        android:text="City"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CountryAddText"
        android:layout_width="98dp"
        android:layout_height="22dp"
        android:text="Add City"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/CountryAddTextPlain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CityAddTitle"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/CountryAddTextPlain"
        android:layout_width="314dp"
        android:layout_height="52dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="City"
        android:inputType="textCapCharacters"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CityAddTitle" />

    <Button
        android:id="@+id/CountryAddSubmit"
        android:layout_width="314dp"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:background="@color/brown"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CityAddChooseCountry"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/CityAddChooseCountryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Country"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/CityAddChooseCountry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/CityAddChooseCountry"
        android:layout_width="314dp"
        android:layout_height="52dp"
        android:layout_marginTop="56dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CountryAddTextPlain"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>